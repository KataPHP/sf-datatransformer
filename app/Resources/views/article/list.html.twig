{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Articles List</h1>

        <a href="{{ path('article_new') }}"><button class="btn btn-default">Add article</button></a>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>Author</th>
                <th>Created At</th>
                <th>Published At</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.author }}</td>
                    <td>{{ article.createdAt|date('d/m/Y') }}</td>
                    <td>{{ article.publishedAt|date('d/m/Y') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}